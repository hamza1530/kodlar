			Console.WriteLine(i + " saniyen var");
			string kullaniciCevabı = Console.ReadLine();			
			if (kullaniciCevabı == dogruCevap.ToString() && stopwatch.ElapsedMilliseconds <= 5000)
			{
				puan++;
				seviye++;
				Console.WriteLine("Doğru cevap Puan: " + puan);
			}
			else if (kullaniciCevabı == dogruCevap.ToString() && stopwatch.ElapsedMilliseconds >= 5000)
